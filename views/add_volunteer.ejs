<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/api/volunteers/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">First Name</td><td>: <input type="text" name="firstname" required></td>
                 </tr>
                 <tr>
                    <td class="label">Last Name</td><td>: <input type="text" name="lastname" required></td>
                 </tr>
                 <tr>
                    <td class="label">Email</td><td>: <input type="text" name="email" required></td>
                 </tr>
                 <tr>
                    <td class="label">Phone</td><td>: <input type="text" name="phone" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Volunteer Type</td><td valign="top">: <textarea name="volunteertype" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Qualification</td><td>: <input type="text" name="qualification" required></td>
                </tr>
                <tr>
                    <td class="label">Event Type</td><td>: <input type="text" name="event" required></td>
                </tr>

                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
