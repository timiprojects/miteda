<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/api/partners/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Partner Type</td><td>: <input type="text" name="partnertype" value="<%=data[0].partnertype%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Organization</td><td>: <input type="text" name="organization" value="<%=data[0].organization%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Contact Person</td><td>: <input type="text" name="conperson" value="<%=data[0].conperson%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Email</td><td>: <input type="text" name="emailperson" value="<%=data[0].emailperson%>" required id="email"></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Address</td>
                    <td valign="top">: 
                        <textarea name="orgaddress" required cols="30" rows="5"><%=data[0].orgaddress%></textarea>
                    </td>
                 </tr>
                <tr>
                    <td class="label">Partner State</td><td>: <input type="text" value="<%=data[0].partnerstate%>" name="partnerstate" id="email" required></td>
                 </tr>
                  <tr>
                    <td class="label">Community</td><td>: <input type="text" name="community" value="<%=data[0].community%>" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                       
                       <input id="send_email" type="button" name="send_email" value="Send Mail" class="mail">
                    </td>
                 </tr>
                </table>
            </form>
            <span id="message"></span>
        </div>
        
<%- include layouts/footer.ejs %>
